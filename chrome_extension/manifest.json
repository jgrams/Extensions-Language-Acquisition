{
    "manifest_version": 2,
    "name": "Speak Easy",
    "description": "An immersive foreign language learning experience",
    "version": "1.14",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Speak Easy"
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "background": {
        "scripts": ["jquery-1.11.3.min.js", "background.js"],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": ["*://*/translator/rest/user/profile", "*://spkeasy.weebly.com/help-page.html", "*://mail.google.com/*", "*://*/owa/*"],
            "css": ["jquery-ui.css", "spkeasy.css"],
            "js": ["jquery-1.11.3.min.js", "jquery-ui.min.js", "myScript.js"],
            "run_at": "document_end"
        },
        {
            "matches": ["*://*/translator/rest/user/profile"],
            "css": ["jquery-ui.css"],
            "js": ["jquery-1.11.3.min.js", "jquery-ui.min.js", "setup.js"],
            "run_at": "document_end"
        }
    ],
    "permissions": [
        "http://*/*",
        "https://*/*",
        "notifications",
        "storage",
        "tabs",
        "tts"
    ],
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}

